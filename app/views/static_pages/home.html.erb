<% if logged_in? %>
    <div class="row">
        <aside class="col-md-4">
            
            <section class="user_info">
                <%= render 'shared/user_info' %>
            </section>
        
            <br>
            <br>
            <section class="device_form">
                <%= render 'shared/device_form' %>
            </section>
        </aside>
        <div class="col-md-8">
            <h3>装置列表</h3>
            <%= render 'shared/feed' %>
        </div>
    </div>
<% else %>
    <div class="center jumbotron">

        <h1>欢迎来到石化腐蚀数据管理分析系统</h1>

        <%= link_to "马上注册!", signup_path , class: "btn btn-lg btn-primary" %>
    </div>

    <%= link_to image_tag("rails.png", alt: "Rails logo" ),
                'http://rubyonrails.org/' %>
<% end %>